{% extends 'base.html.twig' %}

{% block title %}Hello ServiceController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper container">
    <h1 class="row">{{film.title}} </h1>
    <table>
        <tbody> 
            <tr>
                <th>
                    Name : 
                </th>
                <td>
                    {{film.title}}
                </td>
            </tr>   
            <tr>
                <th>
                    Producer : 
                </th>
                <td>
                    {{film.producer}}
                </td>
            </tr>
            <tr>
                <th>
                    Director : 
                </th>
                <td>
                    {{film.director}}
                </td>
            </tr>
            <tr>
                <th>
                    Release Date : 
                </th>
                <td>
                    {{film.release_date}}
                </td>
            </tr>

        </tbody>
    </table>
</div>
{% endblock %}
